---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects">

  <div>
    <div class="text-3xl w-full font-bold mb-5">Proyectos FullStack</div>
  </div>

  <HorizontalCard
    title="Anefi App"
    img="/my-portfolio/anefi_app.png"
    desc="Aplicación móvil para la inversión de fondos y fideicomisos en Ecuador."
    url="https://www.anefi.com.ec/anefi-app-2023/"
    badges='["React Native", "Serverless", "Firebase", "AWS", "Retool"]'
    />
  <HorizontalCard
    title="Somos KFC Ecuador"
    img="/my-portfolio/somos.webp"
    desc="Aplicación móvil diseñada para empleados de KFC, que permite consultar horarios, registros de marcaciones y participar en eventos y actividades corporativas de manera interactiva."
    url="https://play.google.com/store/apps/details?id=com.kruger.kfc.android&hl=es_EC"
    badges='["React Native", "8Base", "Retool"]'
    />
    <div class="divider my-0"></div>
    <HorizontalCard
    title="Alfanet App"
    img="/my-portfolio/alfanet.webp"
    desc="Alfanet Ecuador es la aplicación oficial de Alfanet, el proveedor líder de Internet de Banda Ancha en Ecuador."
    url="https://play.google.com/store/apps/details?id=com.trade.alfanet&hl=es_EC"
    badges='["React Native", "Serverless", "Firebase", "AWS", "Supabase"]'
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5">Proyectos Backend</div>
  </div>

  <HorizontalCard
    title="Integración para Chinawok Chile con Justo" 
    img="/my-portfolio/chinawok.webp"
