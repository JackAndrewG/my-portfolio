    badges='["Serverless", "API", "Webhooks", "AWS", "DynamoDB"]'
  />

  <HorizontalCard
    title="Integración de KFC Chile para los centros comerciales de Cencosud en su aplicación" 
    img="/my-portfolio/cencosud-app.png"
    desc="Comunicación e-commerce entre el API de KFC Chile y el API de Cencosud para la entrega de pedidos en tienda."
    url="https://appmimall.cl/"
    badges='["Nest", "API", "Webhooks", "AWS", "MySQL"]'
  />

  <HorizontalCard
    title="Integración de KFC Ecuador, KFC Colombia y KFC Chile con DeUna" 
    img="/my-portfolio/kfc.png"
    desc="Comunicación e-commerce entre la API de KFC y la API de DeUna para la entrega de pedidos a domicilio."
    url="https://www.kentucky.cl/"
    badges='["Nest", "API", "Webhooks", "AWS", "MySQL"]'
  />
