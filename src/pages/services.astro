---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Servicios ofertados</div>
  </div>

  <HorizontalCard
    title="Scrum Master"
    img="/scrum_master.png"
    desc= "Liderazgo de equipos de desarrollo, implementación de metodologías ágiles, aseguramiento de la calidad y entrega de proyectos en tiempo y forma."
    badge="Jira, Scrum, Agile"
  />
  <HorizontalCard
    title="Backend Developer"
    img="/backend.png"
    desc="Desarrollo de micro-servicios, APIs, lógica de servidores, conexiones con bases de datos e integración con servicios de terceros"
    badge="Node, Django, Lambdas, NestJS, Spring Boot"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Frontend Developer"
    img="/frontend.png"
    desc="Desarrollo de sitios web single page application (SPA), server side render (SSR), landing pages, e-commerce."
    badge="Vue, React, Angular, Supabase, Django"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Mobile Developer"
    img="/mobile_development.png"
    desc="Desarrollo de aplicaciones móviles para android & iOS."
    badge="Dart, Flutter, React Native"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Database Manager"
    img="/database_manager.png"
    desc="Arquitectura de bases de datos, mantenimiento, querying, triggering, functions"
    badge="MongoDB, PostgreSQL, MySQL, DynamoDB, Redis"
  />
  <HorizontalCard
    title="Cloud Engineer"
    img="/cloud.png"
    desc="despliegue de servicios en la nube, configuración de servidores y servicios en la nube."
    badge="Linux Server, Google Cloud, AWS Cloud"
  />
  <div>
    <div class="text-3xl w-full font-bold mb-5">Lenguajes de programación dominados</div>
  </div>

  <pre id="code-container"></pre>
  <script src=`${import.meta.env.BASE_URL}/codeWritter.js` is:inline></script>
</BaseLayout>
